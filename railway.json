{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "npm install --prefix backend",
            "npm install --prefix frontend"
          ]
        },
        "build": {
          "cmds": [
            "npm run build --prefix frontend"
          ]
        },
        "start": {
          "cmds": [
            "npm start --prefix backend"
          ]
        }
      }
    }
  }
}
